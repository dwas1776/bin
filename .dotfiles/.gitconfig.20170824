[user]
	name = David A Wasmer, Sr.
	email = david@wasmeronline.com
[core]
	editor = /usr/bin/vim
[alias]
    hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
    v = log --graph --abbrev-commit --decorate --date=relative --all
    b = branch -v -a
[color]
	branch = auto
	diff = auto
	status = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[diff]
	tool = p4merge
[difftool "p4merge"]
	path = /Applications/p4merge.app/Contents/MacOS/p4merge
[difftool]
	prompt = false
[merge]
	tool = p4merge
[mergetool "p4merge"]
	path = /Applications/p4merge.app/Contents/MacOS/p4merge
[mergetool]
	prompt = false
